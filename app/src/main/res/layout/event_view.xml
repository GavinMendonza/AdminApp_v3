<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/round_corner"

    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/eventNameTV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="30dp"


        tools:text="Event Name" />

    <TextView
        android:id="@+id/deptNameTV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/eventNameTV"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="18dp"


        tools:text="Department Name" />

    <TextView
        android:id="@+id/venueNameTV"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deptNameTV"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:textSize="18dp"

        tools:text="Venue Name" />

    <TextView
        android:id="@+id/facultyNameTV"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/venueNameTV"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:textSize="18dp"

        tools:text="Faculty" />


    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/dateTV"
        android:layout_below="@+id/facultyNameTV"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:textSize="18dp"

        tools:text="Event Date"
        />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/timeTV"
        android:layout_below="@+id/facultyNameTV"
        android:layout_toRightOf="@+id/dateTV"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18dp"

        tools:text="Event Time"
        />


    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/venueNameTV"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="-34dp"
        android:layout_marginEnd="10dp"

        android:layout_toRightOf="@+id/facultyNameTV"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:text="Delete" />

    <TextView
        android:id="@+id/pointsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@id/eventNameTV"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="40dp"
        tools:text="2"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/dateTV"
        android:layout_marginTop="10dp"
        />




</RelativeLayout>